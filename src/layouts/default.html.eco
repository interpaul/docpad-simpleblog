<!DOCTYPE html>
<html class="no-js">
<head>
	<!-- Standard Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Site Properities -->
	<title><%= @getPreparedTitle() %></title>
	<meta name="description" content="<%= @getPreparedDescription() %>" />
	<meta name="keywords" content="<%= @getPreparedKeywords() %>" />

	<!-- DocPad Meta -->
	<%- @getBlock('meta').toHTML() %>

	<!-- DocPad Styles + Our Own -->
	<%- @getBlock('styles').add(@site.styles).toHTML() %>

	<script src="/vendor/modernizr.js"></script>

	<!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
</head>
<body>
	<!--[if lt IE 7]>
	<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->

	<header></header>
	<aside class="article-meta content-width">
		<ul class="meta-data">
			<% if (@document.created_at) : %>
			<li class="date"><%= @moment(@document.created_at).lang('ru').format('DD MMMM YYYY') %></li>
			<% end %>
			<% if ((@site.disqus_shortname) and (@document.disqusid)) : %>
			<li class="comments"><a href="<%= @document.path %>#disqus_thread" data-disqus-identifier="<%= @document.disqusid %>" >Комментарии</a></li>
			<% end %>
			<% if (@document.tags) : %>
			<li class="tags-list">
				<% for tag in @document.tags : %>
					<a class="label-tag" href="<%= @getTagUrl(tag) %>"><%= tag %></a>
				<% end %>
			</li>
			<% end %>
		</ul>
	</aside>
	<article class="page-content content-width" role="main">
		<% if (@document.kind == 'article') : %>
		<h1><%- @document.title %></h1>
		<% end %>
		<%- @content %>
	</article>
	<footer class="page-footer content-width">
		<p class="copyrights">
			© <%- @site.author %>
			<% if (@document.created_at) : %>
				<%= @moment(@document.created_at).format('YYYY') %>
			<% else : %>
				2012—<%= @moment(@now).format('YYYY') %>
			<% end %>
		</p>
	</footer>
	<% if ((@site.disqus_shortname) and (@document.kind == 'article')) : %>
		<article id="disqus_thread"></article>
	<% end %>
	<% if (@document.kind == 'article') : %>
	<nav class="read-next">
		<h4 class="read-next-title">Read Also:</h4>
		<%- @getNavLinks() %>
	</nav>
	<% end %>

	<%- @partial('scripts') %>
</body>
</html>